<div class="container">
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fa fa-spinner fa-spin fa-1x fa-fw"></i> Registration
        </h1>
        <%-include ('./partials/messages') %>
        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="name"><b>Name</b></label>
            <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>" />
          </div>


          <div class="form-group">
            <label for="typesOfUser"><b>which type of user? (student/Teacher)</b></label>
            <select required id="typesOfUser" name="typesOfUser" class="form-control"
              value="<%= typeof typesOfUser != 'undefined' ? typesOfUser : '' %>">
              <option value="Student">Student</option>
              <option value="Teacher">Teacher</option>
            </select>
          </div>

          <div class="form-group">
            <label for="ID"><b>Enter your University ID</b></label>
            <input type="ID" id="ID" name="ID" class="form-control" placeholder="Enter ID"
              value="<%= typeof ID != 'undefined' ? ID : '' %>" />
          </div>
          <div class="form-group">
            <label for="email"><b>Enter your University Email</b></label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>" />
          </div>
          <div class="form-group">
            <label for="password"><b>Password</b></label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>" />
          </div>
          <div class="form-group">
            <label for="password2"><b>Confirm Password</b></label>
            <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
          </div>
          <br>
          <div class="form-check">
            <input required type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1"><b>I Agreed to "Thesis Archiver Forum" terms and
                conditions.</b></label>
          </div>
          <br>
          <button type="submit" class="btn btn-primary btn-block">
            Signup for Thesis Archiver
          </button>
        </form>
        <br>
        <center>
          <p class="row mt-4"><b>&nbsp &nbsp Have An Account? &nbsp </b><a href="/users/login">Login</a></p>
        </center>
      </div>
    </div>
  </div>
</div>